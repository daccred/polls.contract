{
    "extends": "solhint:recommended",
    "plugins": ["prettier"],
    "rules": {
        "prettier/prettier": "error",
        "reason-string": "warn",
        "avoid-suicide": "error",
        "avoid-sha3": "warn",
        "compiler-version": ["error", "^0.8.4"],
        "func-visibility": ["warn", { "ignoreConstructors": true }]
    }
}
